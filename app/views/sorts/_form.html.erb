<%= form_for Sort.new do |f| %>
  <% if @sort.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sort.errors.count, "error") %> prohibited this sort from being saved:</h2>

      <ul>
      <% @sort.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Fill the array" %>
    <%= radio_button_tag :name, 'asc', true %>
    <%= label_tag(:name_ascending, "Ascending (already in order)", :style => "display:inline") %><br>
    <%= radio_button_tag :name, 'desc' %>
    <%= label_tag(:name_descending, "Descending", :style => "display:inline") %><br>
    <%= radio_button_tag :name, 'random' %>
    <%= label_tag(:name_random, "Random", :style => "display:inline") %> 
  </div>

  <div class="field">
    <%= f.label "Input size" %>
    <%= number_field_tag :input, 3, in: 3...9999 %>
  </div>


  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
